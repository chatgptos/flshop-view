<view><view class="edgeInsetTop"></view><view class="wanl-pay"><view class="price-box"><text class="text-df">{{order_no}}</text><text class="wanl-pip text-price margin-top-sm">{{price}}</text></view><view class="list-box"><block wx:for="{{payList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item"><text class="{{['wlIcon-'+item.type+'-pay']}}"></text><view class="action"><text class="title wanl-pip">{{item.name}}</text><block wx:if="{{item.type=='balance'}}"><view><block wx:if="{{isbalance}}"><text>{{"可用余额 ￥"+user.money}}</text></block><block wx:else><text>{{"余额不足，可用余额 ￥"+user.money}}</text></block></view></block><block wx:else><view>{{item.describe}}</view></block></view><block wx:if="{{item.state}}"><view data-event-opts="{{[['tap',[['onSelect',[index]]]]]}}" class="radio text-xxl" bindtap="__e"><block wx:if="{{item.select}}"><text class="wlIcon-xuanze-danxuan wanl-orange"></text></block><block wx:else><text class="wlIcon-xuanze wanl-gray-light"></text></block></view></block><block wx:else><view class="radio text-xxl"><text class="wlIcon-xuanze-danxuan wanl-gray-light"></text></view></block></view></block></view><block wx:if="{{disabled}}"><view><button class="mix-btn wanl-bg-redorange"><text class="wlIcon-jiazai wlIconfont-spin margin-right-xs"></text>正在支付中...</button></view></block><block wx:else><view><block wx:if="{{payNum==1}}"><button data-event-opts="{{[['tap',[['confirm']]]]}}" class="mix-btn wanl-bg-redorange" bindtap="__e">确认支付</button></block><block wx:else><button data-event-opts="{{[['tap',[['confirm']]]]}}" class="mix-btn wanl-bg-redorange" bindtap="__e">合并支付</button></block></view></block><view class="footer text-center"><block wx:if="{{order_pay_no}}"><view class="text-sm">{{(order_type==='groups'?'拼团':'')+"交易号："+order_pay_no}}</view></block><view>© 万联支付</view></view></view></view>